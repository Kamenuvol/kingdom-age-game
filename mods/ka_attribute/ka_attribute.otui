AttributeLabel < Label
  width: 77
  anchors.left: parent.left
  margin-top: 8
  margin-left: 7
  phantom: false

AttributeAddButton < Button
  text: +
  color: green
  size: 17 17
  anchors.top: prev.top
  anchors.horizontalCenter: parent.horizontalCenter

AttributeActLabel < Label
  text-align: right
  anchors.top: prev.top
  anchors.left: labelAct.left
  anchors.right: labelAct.right
  phantom: false

MiniWindow
  icon: ka_attribute
  id: attributeWindow
  !text: 'Attributes'
  @onClose: modules.ka_attribute.close()
  height: 286
  &save: true

  Label
    text: ?
    text-align: center
    phantom: false
    !tooltip: '1. \'Distribution\' are points that you distributed manually.\n2. \'Alignment\' are recommended points that were\n distributed automatically due to your vocation.\n3. \'(De)Buff\' are points that were increased or\ndecreased temporarily due to Powers.'
    anchors.top: minimizeButton.top
    anchors.right: minimizeButton.left
    margin-right: 3
    size: 14 14

  MiniWindowContents
    padding: 0

    Panel
      id: topPanel
      anchors.top: parent.top
      anchors.left: parent.left
      anchors.right: parent.right
      height: 30
      background: black
      opacity: 0.2

    Label
      id: labelAttribute
      !text: 'Attribute'
      anchors.top: parent.top
      anchors.left: parent.left
      margin-top: 7
      margin-left: 7

    Label
      id: labelAct
      width: 45
      text: Act
      text-align: center
      !tooltip: 'Actual points of the specific attribute.'
      anchors.top: parent.top
      anchors.right: parent.right
      margin-top: 7
      margin-right: 7
      phantom: false


    AttributeLabel
      id: attackAttributeLabel
      !text: 'Attack'
      !tooltip: 'It increases your damage.\nPhysical or magical, depending of your vocation.'
      anchors.top: topPanel.bottom
      margin-top: 10

    AttributeAddButton
      id: attackAttributeAddButton

    AttributeActLabel
      id: attackAttributeActLabel


    AttributeLabel
      id: defenseAttributeLabel
      !text: 'Defense'
      !tooltip: 'It increases your physical defense.'
      anchors.top: attackAttributeLabel.bottom

    AttributeAddButton
      id: defenseAttributeAddButton

    AttributeActLabel
      id: defenseAttributeActLabel


    AttributeLabel
      id: willPowerAttributeLabel
      !text: 'Will Power'
      !tooltip: 'It increases your magical defense.'
      anchors.top: defenseAttributeLabel.bottom

    AttributeAddButton
      id: willPowerAttributeAddButton

    AttributeActLabel
      id: willPowerAttributeActLabel


    AttributeLabel
      id: healthAttributeLabel
      !text: 'Health'
      !tooltip: 'It increases your health points and capacity.'
      anchors.top: willPowerAttributeLabel.bottom

    AttributeAddButton
      id: healthAttributeAddButton

    AttributeActLabel
      id: healthAttributeActLabel


    AttributeLabel
      id: manaAttributeLabel
      !text: 'Mana'
      !tooltip: 'It increases your mana points.'
      anchors.top: healthAttributeLabel.bottom

    AttributeAddButton
      id: manaAttributeAddButton

    AttributeActLabel
      id: manaAttributeActLabel


    AttributeLabel
      id: agilityAttributeLabel
      !text: 'Agility*'
      !tooltip: 'It increases your attack speed.\n* 100 points is the maximum value for this attribute.'
      anchors.top: manaAttributeLabel.bottom

    AttributeAddButton
      id: agilityAttributeAddButton

    AttributeActLabel
      id: agilityAttributeActLabel


    AttributeLabel
      id: dodgeAttributeLabel
      !text: 'Dodge*'
      !tooltip: 'It increases your dodge chance.\n* 100 points is the maximum value for this attribute.'
      anchors.top: agilityAttributeLabel.bottom

    AttributeAddButton
      id: dodgeAttributeAddButton

    AttributeActLabel
      id: dodgeAttributeActLabel


    AttributeLabel
      id: walkingAttributeLabel
      !text: 'Walking*'
      !tooltip: 'It increases your walking speed.\n* 100 points is the maximum value for this attribute.'
      anchors.top: dodgeAttributeLabel.bottom

    AttributeAddButton
      id: walkingAttributeAddButton

    AttributeActLabel
      id: walkingAttributeActLabel


    AttributeLabel
      id: luckAttributeLabel
      !text: 'Luck*'
      !tooltip: 'It increases your critical hit chance.\nCritical always increases 50% of any kind of damage.\n* 100 points is the maximum value for this attribute.'
      anchors.top: walkingAttributeLabel.bottom

    AttributeAddButton
      id: luckAttributeAddButton

    AttributeActLabel
      id: luckAttributeActLabel


    Panel
      id: bottomPanel
      anchors.top: prev.bottom
      anchors.left: parent.left
      anchors.right: parent.right
      margin-top: 10
      height: 30
      background: black
      opacity: 0.2

    Label
      id: availablePointsLabel
      !tooltip: 'Available points to distribute.'
      text-auto-resize: true
      anchors.top: bottomPanel.top
      anchors.left: parent.left
      margin-top: 7
      margin-left: 7
      phantom: false

    Label
      id: pointsCostLabel
      !tooltip: 'Points cost to distribute.'
      text-auto-resize: true
      anchors.top: bottomPanel.top
      anchors.right: parent.right
      margin-top: 7
      margin-right: 7
      phantom: false
